<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.realimpact.telecom.calculation.infrastructure.adapter.mybatis.ContractDiscountMapper">

    <!-- 개별 할인 정보 ResultMap -->
    <resultMap id="discountResult" type="DiscountDto">
        <id property="contractId" column="contract_id"/>
        <id property="discountId" column="discount_id"/>
        <result property="discountStartDate" column="discount_start_date"/>
        <result property="discountEndDate" column="discount_end_date"/>
        <result property="productOfferingId" column="product_offering_id"/>
        <result property="discountApplyUnit" column="discount_aply_unit"/>
        <result property="discountAmount" column="discount_amt"/>
        <result property="discountRate" column="discount_rate"/>
        <result property="discountAppliedAmount" column="discount_applied_amount"/>
    </resultMap>
    
    <!-- 계약 할인 중첩 구조 ResultMap -->
    <resultMap id="contractDiscountResult" type="ContractDiscountDto">
        <id property="contractId" column="contract_id"/>
        <collection property="discounts" ofType="DiscountDto" resultMap="discountResult"/>
    </resultMap>

    <!-- 계약 ID 목록으로 할인 내역 조회 -->
    <select id="findDiscountsByContractIds" resultMap="contractDiscountResult">
        SELECT 
            cd.contract_id,
            cd.discount_id,
            discount_start_date,
            discount_end_date,
            cd.product_offering_id,
            cd.discount_aply_unit,
            cd.discount_amt,
            cd.discount_rate,
            cd.discount_applied_amount
        FROM contract_discount cd
        WHERE 1=1
        AND cd.contract_id IN
        <foreach item="contractId" collection="contractIds" open="(" separator="," close=")">
            #{contractId}
        </foreach>
        <!-- 할인 기간이 청구 기간과 겹치는 경우만 조회 -->
        AND cd.discount_start_date &lt;= #{billingEndDate}
        AND cd.discount_end_date &gt;= #{billingStartDate}
        ORDER BY cd.contract_id, cd.discount_id, cd.discount_start_date, cd.discount_end_date
    </select>

    <!-- 할인 적용 금액 업데이트 -->
    <update id="applyDiscount" parameterType="me.realimpact.telecom.calculation.domain.discount.Discount">
        UPDATE contract_discount 
        SET discount_applied_amount = #{discountAppliedAmount}
        WHERE contract_id = #{contractId}
          AND discount_id = #{discountId}
          AND discount_start_date = #{discountStartDate}  
          AND discount_end_date = #{discountEndDate}
    </update>

</mapper>